<% include ../hf/header %>
<div class="container d-flex mt-5" style="width: 75%">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/auth/profile-info" class="list-group-item list-group-item-action">Profile</a>
                <a href="/auth/profile-attendance" class="list-group-item list-group-item-action">Attendance</a>
                <a href="/auth/profile-mark" class="list-group-item list-group-item-action active">Marks</a>
            </div>
        </div>
        <div class="col-md-9 d-flex justify-content-center">
            <div class="card mb-1" style="width: 90%;">
                <h1 class="card-title text-center mt-2">Marks</h1>
                <hr style="width: 80%; margin-left: 10%;">
                <div class="card-body container" style="width: 60%;">
                    <% for(var key in mark) { if(mark[key].icon) { if(mark[key].score) { if(mark[key].score < 20) { %>
                        <div class="row text-danger">
                    <% } else { %>
                        <div class="row text-success">
                    <% }} else { %>
                        <div class="row text-secondary">
                    <% } %>
                            <div class="col-2"><h1><i class="<%- mark[key].icon %>"></i></h1></div>
                            <div class="col-10">
                                <div><b><%= mark[key].score || "Nil" %></b></div>
                                <div><em><%= key %></em></div>      
                            </div>
                        </div>
                        <hr>
                    <% }} %> 
                </div> 
            </div>            
        </div>
</div>
<% include ../hf/footer %>