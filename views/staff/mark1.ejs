<% include ../hf/header %>
<div class="container d-flex mt-5" style="width: 75%">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/auth/profile-info-staff" class="list-group-item list-group-item-action">Profile</a>
                <a href="/auth/profile-attendance-update" class="list-group-item list-group-item-action">Update Attendance</a>
                <a href="/auth/profile-mark-update" class="list-group-item list-group-item-action active">Update Marks</a>
            </div>
        </div>
        <div class="col-md-9 d-flex justify-content-center">
            <div class="card mb-1" style="width: 90%;">
                <h1 class="card-title text-center mt-2">Update Mark</h1>
                <form method="POST" action="/auth/<%= stud_id %>/profile-mark-update"  style="width: 80%;" class="mx-auto my-3">
                    <em>Tamil</em>
                    <div class="form-group">
                        <input type="number" class="form-control" name="tamil" value="<%= mark.tamil.score %>">
                    </div>
                    <em>English</em>
                    <div class="form-group">
                        <input type="number" class="form-control" name="english" value="<%= mark.english.score %>">
                    </div>
                    <em>Maths</em>
                    <div class="form-group">
                        <input type="number" class="form-control" name="maths" value="<%= mark.maths.score %>">
                    </div>
                    <em>Science</em>
                    <div class="form-group">
                        <input type="number" class="form-control" name="science" value="<%= mark.science.score %>">
                    </div>
                    <em>Social</em>
                    <div class="form-group">
                        <input type="number" class="form-control" name="social" value="<%= mark.social.score %>">
                    </div>
                    <div class="d-flex justify-content-center mt-2">
                        <button class="btn btn-primary mx-auto">Submit</button>
                    </div>
                </form>
            </div>           
        </div>
</div>
<% include ../hf/footer %>