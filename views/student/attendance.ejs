<% include ../hf/header %>
<div class="container d-flex mt-5" style="width: 75%">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/auth/profile-info" class="list-group-item list-group-item-action">Profile</a>
                <a href="/auth/profile-attendance" class="list-group-item list-group-item-action active">Attendance</a>
                <a href="/auth/profile-mark" class="list-group-item list-group-item-action">Marks</a>
                <a href="/auth/profile-report" class="list-group-item list-group-item-action">Report</a>
            </div>
        </div>
        <div class="col-md-9 d-flex justify-content-center">
            <div class="card mb-1" style="width: 90%;">
                <h1 class="card-title text-center mt-2">Attendance</h1>
                <hr style="width: 80%; margin-left: 10%;">
                <div class="card-body container" style="width: 60%;">
                    <div class="row text-info">
                        <div class="col-2"><h1><i class="far fa-calendar-alt"></i></h1></div>
                        <div class="col-10">
                            <div><b><%= attendance.present.length + attendance.absent.length %></b></div>
                            <div><em>No. of classes conducted</em></div>      
                        </div>
                    </div>
                    <hr>
                    <div class="row text-success">
                        <div class="col-2"><h1><i class="far fa-calendar-check"></i></h1></div>
                        <div class="col-10">
                            <div><b><%= attendance.present.length %></b></div>
                            <div><em>No. Present</em></div>      
                        </div>
                    </div>
                    <hr>
                    <div class="row text-danger">
                        <div class="col-2"><h1><i class="far fa-calendar-times"></i></h1></div>
                        <div class="col-10">
                            <div><b><%= attendance.absent.length %></b></div>
                            <div><em>No. Absent</em></div>      
                        </div>
                    </div>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/auth/profile-attendance1" class="btn btn-primary">Know more</a>
                    </div>
                </div>
            </div>
            
        </div>
</div>
<% include ../hf/footer %>